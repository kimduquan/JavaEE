<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>EPF-persistence</portlet-name>
		<display-name>EPF-persistence</display-name>
		<portlet-class>javax.portlet.faces.GenericFacesPortlet</portlet-class>
		<init-param>
			<name>javax.portlet.faces.defaultViewId.view</name>
			<value>/WEB-INF/persistence/persistence.xhtml</value>
		</init-param>
		<init-param>
			<name>javax.portlet.faces.bridgeEventHandler</name>
			<value>epf.portlet.util.EventHandler</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>EPF-persistence</title>
			<short-title>EPF-persistence</short-title>
			<keywords>EPF-persistence</keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>epf.gateway.url</name>
				<value>https://localhost:9443/gateway/</value>
			</preference>
		</portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		<supported-processing-event>
			<qname xmlns:epf-schema="http://openup.org/epf/schema">epf-schema:entity</qname>
		</supported-processing-event>
		<supported-public-render-parameter>entity</supported-public-render-parameter>
		<supported-public-render-parameter>id</supported-public-render-parameter>
	</portlet>
	<portlet>
		<portlet-name>EPF-schema</portlet-name>
		<display-name>EPF-schema</display-name>
		<portlet-class>javax.portlet.faces.GenericFacesPortlet</portlet-class>
		<init-param>
			<name>javax.portlet.faces.defaultViewId.view</name>
			<value>/WEB-INF/schema/schema.xhtml</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>EPF-schema</title>
			<short-title>EPF-schema</short-title>
			<keywords>EPF-schema</keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>epf.gateway.url</name>
				<value>https://localhost:9443/gateway/</value>
			</preference>
		</portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		<supported-publishing-event>
			<qname xmlns:epf-schema="http://openup.org/epf/schema">epf-schema:entity</qname>
		</supported-publishing-event>
		<supported-public-render-parameter>entity</supported-public-render-parameter>
	</portlet>
	<event-definition>
		<qname xmlns:epf-schema="http://openup.org/epf/schema">epf-schema:entity</qname>
		<value-type>epf.client.schema.Entity</value-type>
	</event-definition>
	<public-render-parameter>
		<identifier>entity</identifier>
		<qname xmlns:epf-schema="http://openup.org/epf/schema">epf-schema:entity</qname>
	</public-render-parameter>
	<public-render-parameter>
		<identifier>id</identifier>
		<qname xmlns:epf-persistence="http://openup.org/epf/persistence">epf-persistence:id</qname>
	</public-render-parameter>
</portlet-app>