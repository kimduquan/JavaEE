        <dependency>
            <groupId>openup</groupId>
            <artifactId>EPF-messaging-schema</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>openup</groupId>
            <artifactId>EPF-webapp-internal</artifactId>
            <version>${project.version}</version>
